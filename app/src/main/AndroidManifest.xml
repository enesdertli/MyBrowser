<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tr.edu.mu.ceng.mad.mybrowser">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBrowser">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.internet.action.VIEW"/>  <category android:name="android.intent.category.BROWSABLE" /> <data android:scheme="http" />
                <category android:name="android.intent.category.LAUNCHER" /> <category android:name="android.internet.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>